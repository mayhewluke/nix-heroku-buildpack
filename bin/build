#!/usr/bin/env bash

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
source $DIR/common

# Heroku provides environment variables as files so we can be selective about
# what we expose and what we hide. Export the ones we need using a helper
# function.
export_env_dir $ENV_DIR

mkdir -p /tmp/nix-mnt/$NIX_VERSION_FULL
/app/bin/proot -b /tmp/nix-mnt/$NIX_VERSION_FULL:/nix /app/bin/build-internal
